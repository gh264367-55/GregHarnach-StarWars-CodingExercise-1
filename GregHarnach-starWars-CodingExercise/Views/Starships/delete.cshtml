@model GregHarnach_starWars_CodingExercise.Models.Starship
@{
    ViewData["Title"] = "Delete Starship";
}
<h1>Delete Starship</h1>
<hr />
<h5>Are you sure you want to delete this?</h5>

<div class="card my-3">
    <div class="card-body">
        <h5 class="card-title mb-1">@Model.Name</h5>
        <p class="card-text mb-0"><strong>Model:</strong> @Model.Model</p>
        <p class="card-text mb-0"><strong>Manufacturer:</strong> @Model.Manufacturer</p>
        <p class="card-text"><strong>Class:</strong> @Model.StarshipClass</p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </form>
    </div>
</div>
