@model GregHarnach_starWars_CodingExercise.Models.Starship
@{
    ViewData["Title"] = "Starship Details";
}
<h1>Starship Details</h1>
<hr />

<div class="row">
    <div class="col-lg-8">
        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Model</dt>
            <dd class="col-sm-8">@Model.Model</dd>

            <dt class="col-sm-4">Manufacturer</dt>
            <dd class="col-sm-8">@Model.Manufacturer</dd>

            <dt class="col-sm-4">Class</dt>
            <dd class="col-sm-8">@Model.StarshipClass</dd>

            <dt class="col-sm-4">Cost (credits)</dt>
            <dd class="col-sm-8">@((Model.CostInCredits?.ToString("N0")) ?? "—")</dd>

            <dt class="col-sm-4">Hyperdrive</dt>
            <dd class="col-sm-8">@((Model.HyperdriveRating?.ToString("0.##")) ?? "—")</dd>

            <dt class="col-sm-4">Length</dt>
            <dd class="col-sm-8">@Model.Length</dd>

            <dt class="col-sm-4">Max Atmo Speed</dt>
            <dd class="col-sm-8">@Model.MaxAtmospheringSpeed</dd>

            <dt class="col-sm-4">MGLT</dt>
            <dd class="col-sm-8">@Model.MGLT</dd>

            <dt class="col-sm-4">Crew</dt>
            <dd class="col-sm-8">@Model.Crew</dd>

            <dt class="col-sm-4">Passengers</dt>
            <dd class="col-sm-8">@Model.Passengers</dd>

            <dt class="col-sm-4">Cargo Capacity</dt>
            <dd class="col-sm-8">@Model.CargoCapacity</dd>

            <dt class="col-sm-4">Consumables</dt>
            <dd class="col-sm-8">@Model.Consumables</dd>

            <dt class="col-sm-4">Pilots</dt>
            <dd class="col-sm-8">@Model.PilotsCsv</dd>

            <dt class="col-sm-4">Films</dt>
            <dd class="col-sm-8">@Model.FilmsCsv</dd>

            <dt class="col-sm-4">SWAPI Url</dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrWhiteSpace(Model.SwapiUrl))
                {
                    <a href="@Model.SwapiUrl" target="_blank" rel="noopener">@Model.SwapiUrl</a>
                }
                else
                {
                    @:—
                }
            </dd>
        </dl>

        <div class="mt-3">
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-outline-secondary" asp-action="Index">Back to list</a>
        </div>
    </div>
</div>
