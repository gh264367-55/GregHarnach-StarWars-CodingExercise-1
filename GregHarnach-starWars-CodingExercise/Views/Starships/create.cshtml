@model GregHarnach_starWars_CodingExercise.Models.Starship
@{
    ViewData["Title"] = "Create Starship";
}
<h1>Create Starship</h1>
<hr />
<div class="row">
    <div class="col-md-10 col-lg-8">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Model" class="form-label"></label>
                    <input asp-for="Model" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Manufacturer" class="form-label"></label>
                    <input asp-for="Manufacturer" class="form-control" />
                </div>
            </div>

            <div class="row g-3 mt-0">
                <div class="col-md-4">
                    <label asp-for="StarshipClass" class="form-label"></label>
                    <input asp-for="StarshipClass" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="CostInCredits" class="form-label"></label>
                    <input asp-for="CostInCredits" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="HyperdriveRating" class="form-label"></label>
                    <input asp-for="HyperdriveRating" class="form-control" />
                </div>
            </div>

            <div class="row g-3 mt-0">
                <div class="col-md-4">
                    <label asp-for="Length" class="form-label"></label>
                    <input asp-for="Length" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="MaxAtmospheringSpeed" class="form-label"></label>
                    <input asp-for="MaxAtmospheringSpeed" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="MGLT" class="form-label"></label>
                    <input asp-for="MGLT" class="form-control" />
                </div>
            </div>

            <div class="row g-3 mt-0">
                <div class="col-md-4">
                    <label asp-for="Crew" class="form-label"></label>
                    <input asp-for="Crew" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="Passengers" class="form-label"></label>
                    <input asp-for="Passengers" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="CargoCapacity" class="form-label"></label>
                    <input asp-for="CargoCapacity" class="form-control" />
                </div>
            </div>

            <div class="row g-3 mt-0">
                <div class="col-md-6">
                    <label asp-for="Consumables" class="form-label"></label>
                    <input asp-for="Consumables" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="SwapiUrl" class="form-label"></label>
                    <input asp-for="SwapiUrl" class="form-control" />
                </div>
            </div>

            <div class="mt-3">
                <label asp-for="PilotsCsv" class="form-label"></label>
                <textarea asp-for="PilotsCsv" class="form-control" rows="2" placeholder="Comma-separated URLs or names"></textarea>
            </div>

            <div class="mt-3">
                <label asp-for="FilmsCsv" class="form-label"></label>
                <textarea asp-for="FilmsCsv" class="form-control" rows="2" placeholder="Comma-separated film URLs or names"></textarea>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
